{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build project",
            "command": "gcc",
            "args": [
                "-g",
                "*.c",
                "-o",
                "main"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}
